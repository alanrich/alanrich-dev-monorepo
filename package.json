{
  "name": "alanrich-dev-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "nx": "nx",
    "start": "nx run-many --target=serve --projects=anabasis,alanrich-dev",
    "test": "nx test",
    "build": "npx npm-run-all build:anabasis copy:anabasis build:alanrich-dev",
    "build:anabasis": "npx npm-run-all build:anabasis-frontend build:anabasis-backend",
    "build:anabasis-frontend": "cd apps/anabasis/src/client && npm install && npm run build",
    "build:anabasis-backend": "nx build anabasis",
    "build:alanrich-dev": "nx build alanrich-dev",
    "copy:anabasis": "cp -R dist/apps/anabasis/* apps/alanrich-dev/public/work-sample/"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "nx": "19.8.4",
    "@nrwl/workspace": "19.8.4",
    "@nrwl/react": "19.8.4",
    "@nrwl/node": "19.8.4",
    "@nrwl/web": "19.8.4"
  },
  "dependencies": {}
}
